{% extends 'principal/principal.html.twig' %}

{% block body %}
  <div id="page-wrapper">
    <div class="container-fluid">
    {% for item in items %}
        <h1 class="page-header">
          {{item.NombreItem}} - Indicadores
        </h1>
        <ol class="breadcrumb">
            <li>
              <a href="../ambitos">{{item.NombreAmbito}}</a>
            </li>
            <li>
              <a href="../items/{{item.id}}">{{item.NombreItem}}</a>
            </li>
            <li class="active">
            Indicadores
            </li>
        </ol>
    {% endfor %}
      <div class="table-responsive" style="margin: 90px 0px 0px 50px;">
        <table style="width:25%">
          <tbody>
            {% for indicador in indicadores %}
              <tr>
                <td>
                  <a href="../respuesta/{{indicador.id}}"><button type="button" class="btn btn-lg btn-info" style="margin-bottom: 40px;">Indicador {{indicador.Descripcion}}</button>
                </td>
                <td>
                  <i class="fa fa-fw fa-file" style="margin-bottom: 37px;"></i>
                </td>
                <td>
                  <i class="fa fa-fw fa-desktop" style="margin-bottom: 37px;"></i>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  <script src="{{ asset('js/jquery.js') }}"></script>
  <script src="{{ asset('js/bootstrap.min.js') }}"></script>
  <script src="{{ asset('js/plugins/morris/raphael.min.js') }}"></script>
  <script src="{{ asset('js/plugins/morris/morris.min.js') }}"></script>
  <script src="{{ asset('js/plugins/morris/morris-data.js') }}"></script>
  <script src="{{ asset('js/plugins/flot/jquery.flot.js') }}"></script>
  <script src="{{ asset('js/plugins/flot/jquery.flot.tooltip.min.js') }}"></script>
  <script src="{{ asset('js/plugins/flot/jquery.flot.resize.js') }}"></script>
  <script src="{{ asset('js/plugins/flot/jquery.flot.pie.js') }}"></script>
  <script src="{{ asset('js/plugins/flot/flot-data.js') }}"></script>
{% endblock %}
