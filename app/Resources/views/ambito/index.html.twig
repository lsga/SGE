{% extends 'base.html.twig' %}

{% block body %}
  <div id="page-wrapper">
    <div class="container-fluid">
    <h1 class="page-header">
        Ambitos
    </h1>
      <div class="table-responsive" style="margin: 90px 0px 0px 50px;">
        <table>
          <tbody>
            {% for ambito in ambitos %}
              <tr>
                <td>
                  <a href="../app_dev.php/items/{{ambito.id}}"<button type="button" class="btn btn-lg btn-info" style="margin-bottom: 40px;">{{ambito.id}}.{{ambito.NombreAmbito}}</button></a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}

